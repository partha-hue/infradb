{
      "compilerOptions": {
            "module": "ESNext",
            "moduleResolution": "Bundler",
            "target": "ESNext",
            "jsx": "react-jsx",
            "jsxImportSource": "react",
            "allowImportingTsExtensions": true,
            "strictNullChecks": true,
            "strictFunctionTypes": true,
            "strict": true,
            "esModuleInterop": true,
            "skipLibCheck": true
      },
      "include": [
            "frontend/src/**/*",
            "frontend/declarations.d.ts"
      ],
      "exclude": [
            "node_modules",
            "**/node_modules/*"
      ]
}