{
      "name": "infradb-frontend",
      "type": "module",
      "version": "0.1.0",
      "main": "electron/bootstrap.cjs",
      "homepage": "./",
      "scripts": {
            "dev": "vite",
            "build": "vite build",
            "preview": "vite preview",
            "start": "npm run dev & npx electron .",
            "electron": "electron .",
            "dist": "npm run build && npx electron-builder"
      },
      "dependencies": {
            "react": "^18.2.0",
            "react-dom": "^18.2.0",
            "react-icons": "^4.12.0",
            "@monaco-editor/react": "^4.6.0",
            "axios": "^1.6.0",
            "electron-is-dev": "^2.0.0"
      },
      "devDependencies": {
            "@vitejs/plugin-react": "^4.0.0",
            "vite": "^5.4.21",
            "electron": "latest",
            "electron-builder": "^24.6.4",
            "concurrently": "^8.2.0"
      },
      "build": {
            "appId": "com.infradb.desktop",
            "productName": "InfraDB Desktop",
            "files": [
                  "dist/**/*",
                  "electron/**/*",
                  "node_modules/**/*"
            ],
            "win": {
                  "target": [
                        "nsis",
                        "portable"
                  ]
            },
            "mac": {
                  "target": [
                        "dmg",
                        "zip"
                  ]
            },
            "linux": {
                  "target": [
                        "AppImage",
                        "deb"
                  ]
            }
      }
}